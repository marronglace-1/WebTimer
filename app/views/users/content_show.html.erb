<% content_for :css do %>
    <%= stylesheet_link_tag "destroy" %>
<% end %>
<div class="main user-show">
    <div class="main-wrapper">
        <div class="user-tabs">
            <div class="user-content-data">
                <h2 class="title list-edit-title">学習内容の編集</h2>
                <% if @lists %>
                    <%= form_tag("/users/content_update") do %>
                        <% @lists.each do |list| %>
                            <div class="subtitle">
                                <label>content</label>
                                <input type="text" name="<%= list.list_name %>" value="<%= list.list_content %>">
                            </div>
                        <% end %>
                    <input type="submit" value="編集" class="content-btn">
                    <% end %>
                <% end %>
                <%= link_to("/users/content_delete") do %>
                    <input type="submit" value="学習内容削除画面へ" class="content-btn">
                <% end %>
            </div>    
        </div>
    </div>
</div>